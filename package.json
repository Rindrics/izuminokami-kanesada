{
  "name": "izuminokami-kanesada",
  "version": "0.0.1",
  "description": "四書五経およびその他の中国古典を学習するためのWebアプリケーション",
  "license": "MIT",
  "private": true,
  "scripts": {
    "dev": "next dev -p 30600",
    "build": "next build",
    "start": "next start -p 30600",
    "lint": "eslint",
    "check": "biome check src",
    "format": "biome format --write src",
    "deploy": "pnpm build && firebase deploy --only hosting",
    "emulators": "firebase emulators:start",
    "test": "vitest run",
    "test:watch": "vitest",
    "prepare": "husky"
  },
  "dependencies": {
    "firebase-admin": "^13.6.0",
    "next": "16.1.3",
    "react": "19.2.3",
    "react-dom": "19.2.3"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.11",
    "@commitlint/cli": "^20.3.1",
    "@commitlint/config-conventional": "^20.3.1",
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "eslint": "^9",
    "eslint-config-next": "16.1.3",
    "firebase-tools": "^15.3.1",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "tailwindcss": "^4",
    "tsx": "^4.21.0",
    "typescript": "^5",
    "vitest": "^4.0.17"
  }
}
