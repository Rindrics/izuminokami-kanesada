{
  "name": "izuminokami-kanesada",
  "version": "0.2.2",
  "description": "四書五経およびその他の中国古典を学習するためのWebアプリケーション",
  "license": "MIT",
  "private": true,
  "scripts": {
    "dev": "next dev -p 30600",
    "prebuild": "pnpm generate:contents && (mv src/app/api/audio/save src/app/api/audio/_save.dev-only 2>/dev/null || true) && (mv src/app/api/audio/serve src/app/api/audio/_serve.dev-only 2>/dev/null || true)",
    "build": "next build",
    "postbuild": "(mv src/app/api/audio/_save.dev-only src/app/api/audio/save 2>/dev/null || true) && (mv src/app/api/audio/_serve.dev-only src/app/api/audio/serve 2>/dev/null || true)",
    "generate:contents": "tsx scripts/generate-contents.ts",
    "generate:contents:watch": "tsx scripts/generate-contents.ts --watch",
    "validate:contents": "tsx scripts/validate-content-diff.ts",
    "validate:contents:all": "tsx scripts/validate-content-diff.ts --all",
    "generate:audio": "tsx scripts/generate-and-upload-audio.ts",
    "upload:audio": "tsx scripts/upload-audio.ts",
    "validate:audio-manifest": "tsx scripts/validate-audio-manifest.ts",
    "start": "next start -p 30600",
    "lint": "eslint",
    "check": "biome check src",
    "format": "biome format --write src",
    "format:yaml": "prettier --write 'contents/**/*.yaml'",
    "deploy": "pnpm build && firebase deploy --only hosting",
    "emulators": "firebase emulators:start",
    "test": "vitest run",
    "test:watch": "vitest",
    "prepare": "husky"
  },
  "dependencies": {
    "@google-cloud/storage": "^7.16.0",
    "@google-cloud/text-to-speech": "^6.4.0",
    "cytoscape": "^3.32.0",
    "cytoscape-fcose": "^2.2.0",
    "firebase-admin": "^13.6.0",
    "next": "16.1.3",
    "react": "19.2.3",
    "react-dom": "19.2.3"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.11",
    "@commitlint/cli": "^20.3.1",
    "@commitlint/config-conventional": "^20.3.1",
    "@tailwindcss/postcss": "^4",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "chokidar": "^5.0.0",
    "eslint": "^9",
    "eslint-config-next": "16.1.3",
    "firebase-tools": "^15.3.1",
    "husky": "^9.1.7",
    "js-yaml": "^4.1.1",
    "lint-staged": "^16.2.7",
    "prettier": "^3.8.1",
    "tailwindcss": "^4",
    "tsx": "^4.21.0",
    "typescript": "^5",
    "vitest": "^4.0.17"
  }
}
