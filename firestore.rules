rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // User data: users can only read/write their own data
    match /users/{userId}/{document=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Comments: anyone can read, authenticated users can create, only owner can update/delete
    match /comments/{commentId} {
      allow read: if true;
      allow create: if request.auth != null;
      allow update, delete: if request.auth != null && request.auth.uid == resource.data.userId;
    }
    
    // Favorites: users can only read/write their own favorites
    match /favorites/{userId}/{document=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Legacy admin-only rules for other collections
    match /{document=**} {
      // Anyone can read (public content)
      allow read: if true;
      // Only authenticated admins can write
      allow write: if request.auth != null
                   && request.auth.token.admin == true;
    }
  }
}
